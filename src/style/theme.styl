body
  background: #212125
  background: linear-gradient(-45deg, #5047F0, #4D2DAD)
  color: #efefef
  display: flex
  min-height: 100vh
  align-items: center
  justify-content: center
  transition: background 600ms, color 600ns

#app
  width: 100%
  max-width: 600px
  margin: 1em

.status
  display: relative

/**
 * Themes
 */

.alt
  background: linear-gradient(to right, #0f2027, #203a43, #2c5364)

.dark
  background: linear-gradient(-45deg, #ad5389, #3c1053)

  .status
    background: linear-gradient(#060606, #222)



// theme styling
.wut, .wat, .alt
  background: blue

  .status
    background: green
