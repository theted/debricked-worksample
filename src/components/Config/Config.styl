  .config
    position: fixed
    top: 0
    right: 0
    background: #111
    color: #eee
    transform: translateX(300px)
    transition: transform 500ms, background 1000ms
    width: 100%
    max-width: 300px
    height: 100%
    z-index: 999

    a.switch
      position relative
      left: -36px
      top: 6px
      background-image: url('/img/cog.svg')
      background-size: contain
      background-repeat: no-repeat
      padding: 0 1em
      &:hover
        filter: invert(1)

    .wrap
      position: relative
      top: -30px

  .active
    background: #333
    transform: translateX(0px)

.box, .field
  padding: .5em
  width: 100%
