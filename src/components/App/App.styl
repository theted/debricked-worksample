.dropbox
  // margin: 1em 0
  // outline: 2px dashed lighten(#4D2DAD, 20%)
  // outline-offset: -10px
  border: 1px solid lighten(#4D2DAD, 20%)
  color: #f3f3f3
  position: relative
  cursor: pointer
  transition: all 450ms
  box-shadow: inset 5px 5px 50px rgba(0, 0, 0, 0.15)
  font-size: 72%

  // background: linear-gradient(-45deg, darken(#5047F0, 10%), darken(#4D2DAD, 10%))
  background: linear-gradient(darken(#4D2DAD, 1%), darken(#5047F0, 1%))
  // background: linear-gradient(#C7D3DC, #5B798E) // #5B798E)
  transition: background 1s ease-out
  background-size:100% 200%
  cursor:pointer
  // background-position: 0px

  &:hover, &:focus
    background-position: 0 100%


  p
    font-size: 1.2em
    text-align: center
    padding: 50px 0

  .input-file
    opacity: 0
    width: 100%
    height: 200px
    position: absolute
    cursor: pointer


