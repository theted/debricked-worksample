.dropbox
  border: 1px solid lighten(#4D2DAD, 20%)
  color: #f3f3f3
  position: relative
  cursor: pointer
  transition: all 450ms
  box-shadow: inset 5px 5px 50px rgba(0, 0, 0, 0.15)
  font-size: 72%
  background: linear-gradient(darken(#4D2DAD, 1%), darken(#5047F0, 1%))
  transition: background 1s ease-out
  background-size:100% 200%
  cursor:pointer
  &:hover, &:focus
    background-position: 0 100%

  p
    font-size: 1.2em
    text-align: center
    padding: 50px 0

  .input-file
    opacity: 0
    width: 100%
    height: 200px
    position: absolute
    cursor: pointer

.hidden
  display: none

footer
  position: fixed
  bottom: 0
  left: 0
  right: 0
  background: #222
  padding: 0.5em
